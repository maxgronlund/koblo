- content_for :tabs do
  &nbsp;

- content_for :title do
  = params[:artists].present? ? 'Artists' : 'Users'

- content_for :sub_content do
  - options = params[:artists].present? ? { :path => 'artists_path' } : {}
  = alphabetically_paginate(:users, @users, options)
  .user_list
    - for user in @users do
      .user
        .user_picture
          = image_tag user.picture.url(:thumb)
        .user_name
          = link_to user.name, user_path(user)
      .clear
  
