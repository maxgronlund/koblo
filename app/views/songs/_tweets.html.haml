- content_for :javascript_includes do
  = javascript_include_tag "http://widgets.twimg.com/j/2/widget.js"
  
.tweets
  :javascript
    new TWTR.Widget({
      version: 2,
      type: 'profile',
      rpp: 5,
      interval: 30000,
      width: 'auto',
      height: 566,
      theme: {
        shell: {
          background: '#edeeef',
          color: '#8b8080'
        },
        tweets: {
          background: '#edeeef',
          color: '#8b8080',
          links: '#6c6466'
        }
      },
      features: {
        scrollbar: false,
        loop: false,
        live: false,
        behavior: 'all'
      }
    }).render().setUser("#{@twitter_username}").start();
