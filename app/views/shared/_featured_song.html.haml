.featured_song
  = link_to song_path(song) do
    .image_wrapper
      .gradient
      .image
        - if song.picture
          = image_tag song.picture.picture.url(:front_page_5)
  
    .song_info
      .artist_name.nowrap= song.name.capitalize
      .title.nowrap= song.title
      .num_tracks== #{song.num_tracks} tracks

  .buy_button
    = form_tag buy_song_path(song) do
      = content_tag 'button', 'ADD TO CART', :class => 'btn primary'
