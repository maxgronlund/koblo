= simple_form_for user, :url => user.new_record? ? admin_users_path : admin_user_path(user), :wrapper => :inline do |f|
  = f.input :name
  = f.input :email
  = f.input :featured, :wrapper_html => { :class => 'boolean_input_div'}
  = f.input :password, :required => false
  = f.input :password_confirmation, :required => false, :label => 'Confirm'
  = f.input :role
  = f.input :website
  = f.input :twitter_username
  = f.input :description
  = f.association :user_type
  = submit_tag "Save", :id => 'save_user_button', :class => "btn primary"

= link_to "Back", admin_users_path, :id => 'back'
